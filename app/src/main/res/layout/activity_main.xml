<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ua.pp.hak.expenses.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Домой"
            android:background="@drawable/rectangular_button"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:id="@+id/button" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_button"
            android:layout_marginRight="5dp"
            android:text="Добавить"
            android:layout_weight="1"
            android:id="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_button"
            android:text="Графики"
            android:layout_weight="1"
            android:id="@+id/button3" />

    </LinearLayout>

    <GridLayout
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Затраты"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="за день"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="за неделю"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="за месяц"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView5"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_gravity="right"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="243"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_gravity="right"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2435"
            android:layout_gravity="right"
            android:id="@+id/textView7"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

    <GridLayout
        android:useDefaultMargins="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFood"
            android:background="@drawable/rounded_button"
            android:src="@drawable/food"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAuto"
            android:background="@drawable/rounded_button"
            android:src="@drawable/auto"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClothes"
            android:background="@drawable/rounded_button"
            android:src="@drawable/t_shirt"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHouse"
            android:background="@drawable/rounded_button"
            android:src="@drawable/house"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEye"
            android:background="@drawable/rounded_button"
            android:src="@drawable/eye"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCoktail"
            android:background="@drawable/rounded_button"
            android:src="@drawable/coktail"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCell"
            android:background="@drawable/rounded_button"
            android:src="@drawable/cell"
            android:layout_row="3"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSport"
            android:background="@drawable/rounded_button"
            android:src="@drawable/sport"
            android:layout_row="3"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOther"
            android:background="@drawable/rounded_button"
            android:src="@drawable/other"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

</LinearLayout>
